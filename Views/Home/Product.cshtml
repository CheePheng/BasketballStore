@{
    ViewData["Title"] = "Index";
}

<h1>Merch Item</h1>
<form method="post">
<table class="table" style="width:100%">
    <thead>
        <tr>
            <th>Id</th>
            <th>Name</th>
            <th>Price</th>
            <th>Quantity</th>
            <th>Description</th>
            <th></th>
         </tr>
    </thead>
    <tbody>
        @foreach(var obj in Model){

            <tr>
                <td width="10%">@obj.ProductId</td>
                <td width="30%">@obj.Name</td>
                <td width="30%">@obj.Price</td>
                <td width="30%">@obj.Quantity</td>
                <td width="30%">@obj.Description</td>
                
                <td><button asp-controller="Cart" asp-action="AddToCart(@obj)">Add</button></td>
            </tr>
        }
    </tbody>
</table>
</form>