@model BasketballStore.Models.CartItem

@{
    ViewData["Title"] = "Remove From Cart";
}

<h1>Remove From Cart</h1>

<h3>Are you sure you want to remove this item from your cart?</h3>
<div>
    <h4>Product Details</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Product.Name)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Product.Quantity)
        </dd>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Product.Price)
        </dd>
    </dl>

    <form asp-action="Delete">
        <input type="hidden" asp-for="CartItemId" />
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <a asp-action="Index">Back to List</a>
    </form>
</div>
