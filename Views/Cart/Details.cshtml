@model List<BasketballStore.Models.CartItem>
@{
    ViewData["Title"] = "Cart Details";
}

<h1>Cart Details</h1>

@if (Model != null && Model.Count > 0)
{
    @foreach (var team in Model)
    {
        <div>
            <dl class="row">
                <dt class="col-sm-2">
                    Product Name:
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(modelItem => team.Product.Name)
                </dd>
                <dt class="col-sm-2">
                    Quantity:
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(modelItem => team.Product.Quantity)
                </dd>
                <dt class="col-sm-2">
                    Product Price:
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(modelItem => team.Product.Price)
                </dd>
                <dt class="col-sm-2">
                    Total Price:
                </dt>
                <dd class="col-sm-10">
                    @(team.Product.Price * team.Product.Quantity)
                </dd>
            </dl>
        </div>
        <div>
            <a asp-action="Edit" asp-route-id="@team.CartId">Edit</a>
            <a asp-action="Delete" asp-route-id="@team.CartId">Remove</a>
        </div>

        <hr />
    }
    <a asp-action="Index" asp-controller="Cart">Back to Cart</a>
}
else
{
    <p>No Items found in your cart.</p>
    <a asp-action="Index" asp-controller="Products" class="btn btn-primary">Keep Shopping</a>
}
